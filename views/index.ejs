<script>
$(document).ready(function(){
    $('input#search').on('keydown',function(ev) {
        if(ev.which === 13) {
            var query = $(this).val();
            var result = $('#result');
            $.ajax({
                url : '/search',
                data : "q="+query+"&page=4&ftype=pdf",
                type : 'POST',
                dataType : 'json',
                beforeSend : function(){
                    result.html('<center><img src="/images/loading.gif"></center>');
                },
                success : function(data){
                    console.log(data);
                    var html = "<ul>";
                    $.each(data,function(){
                        html += '<li>'+this.title+'<a target="__blank" href="'+this.link+'" style="float:right">[download]</a></li>';
                    });
                    html += "</ul>";
                    result.html(html);
                }
            });
            return false;
        }
    });
    $('form').submit(function(){
        var form = $('form');
        var result = $('#result');
        $.ajax({
            url : '/search',
            data : form.serialize(),
            type : 'POST',
            dataType : 'json',
            beforeSend : function(){
                result.html('<center><img src="/images/loading.gif"></center>');
            },
            success : function(data){
                console.log(data);
                var html = "<ul>";
                $.each(data,function(){
                    html += '<li>'+this.title+'<a target="__blank" href="'+this.link+'" style="float:right">[download]</a></li>';
                });
                html += "</ul>";
                result.html(html);
            }
        });
        return false;
    });
});
